<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	>
    
	<ViewFlipper 
	    android:id="@+id/introduction_viewFlipper"
	    android:layout_width="match_parent"
	    android:layout_height="200dp" 
	    android:inAnimation="@anim/anim_in_left"
	    android:outAnimation="@anim/anim_out_left"
	    android:persistentDrawingCache="animation"
   		>
   		
	    <ImageView 
	        android:scaleType="centerCrop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pic_about_introduction01"
	        />
	    
	    <ImageView 
	        android:scaleType="centerCrop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pic_about_introduction02"
	        />
	    
	    <ImageView 
	        android:scaleType="centerCrop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pic_about_introduction03"
	        />
	    
	</ViewFlipper>
        
</LinearLayout>